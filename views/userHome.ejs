<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
      body{
        background: linear-gradient(69deg, rgba(135, 43, 255, 0.966) 0%, rgba(255, 154, 96, 0.966) 10%, rgba(154, 201, 237, 0.7) 29% , rgba(187, 234, 232, 0.966) 32%, rgba(223, 104, 138, 0.966) 60%,  rgba(154, 69, 154, 0.966) 76%, rgba(85, 69, 154, 0.966) 100%);
        /* background-image: url('/images/contactbg.jpg'); */
        background-position: cover; 
        height: 100vh;
         
      }
      .profile-sidebar {
            position: fixed;
            top: 0;
            left: -350px;
            width: 350px;
            height: 100vh;
            /* background: rgba(255, 255, 255, 0.98); */
            background:  linear-gradient(180deg, rgba(255, 244, 244, 0.1) 3%, transparent 100%);
            backdrop-filter: blur(10px);
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            transition: left 0.4s cubic-bezier(0.16, 1, 0.3, 1);
            z-index: 1000;
            overflow-y: auto;
        }
        .profile-sidebar.active {
            left: 0;
        }
         .profile-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 999;
        }
        .profile-overlay.active {
            opacity: 1;
            visibility: visible;
        }
        .close-profile{
          background :linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
          border: none;
          border-radius: 10px;
          font-size: 1.5rem;
          float: right;
          transition: all 0.3s ease;
          cursor: pointer;
        }
        .close-profile:hover{ 
          background-color: rgb(231, 231, 232);
           transform: translateY(-2px);
           box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3); 
            
        }
        .profile-body{
          padding: 20px;
        }
        .sidebar-score-card{
          text-align: center;
          margin-bottom: 20px;

        }
        .section-tile{
          font-weight: bold;
          margin-bottom: 10px;
        }
        .info-items{
          margin-bottom: 10px;
        }
        .info-label{
          font-weight: bold;
        }
        .info-value{ 
          transition: all 0.6s ease;
        }
        .info-value:hover{
          padding-left: 2px;
          background :linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
          /* background-color: rgb(231, 231, 232); */
          border-radius: 5px;
          transform: translateY(-2px);
          box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }
        .sidebar-score-value:hover{
          text-align: center;
          background :linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
          /* background-color: rgb(231, 231, 232); */
          border-radius: 5px;
          transform: translateY(-2px);
          transition: all 0.3s ease;
          box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }
        .homeBox{
          background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        }
        .cardBox{
          background: linear-gradient(180deg, rgba(255, 244, 244, 0.1) 0%, transparent 100%);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            margin-top: 10px;
        }
        .buttonALL{
          /* background: linear-gradient(135deg, #c596c6 0%, #cebcf9 100%);  */
            border: none;
            padding: 12px;
            font-weight: 700;
            font-size: 16px;
            border-radius: 10px;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
        }
        .buttonALL:hover{
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3); 
            
          }
        .buttonALL:active {
          transform: translateY(0);
        }
        .btnProfile{
          background: linear-gradient(135deg, #edc73a 0%, #f38435 100%);
        }
        .btnProfile:hover{
          background: linear-gradient(135deg, #ff6347 0%, #f5ac78 100%);
        }
        .btnLogout{
          background: linear-gradient(135deg, #2a57f9 0%, #5cbff8 100%);
        }
        .btnLogout:hover{
          background: linear-gradient(135deg, #ff6347 0%, #f5ac78 100%);
        }
        .btnPlay{
          background: linear-gradient(135deg, #2a57f9 0%, #5cbff8 100%);
        }
        .btnPlay:hover{
          background: linear-gradient(135deg, #ff6347 0%, #f5ac78 100%);
        }

         .particle{
            position: fixed;
            width: 3px;
            height: 3px;
            background-color: rgba(241, 241, 241, 0.9);
            border-radius: 65%;
            animation: popup  9s linear infinite;
            z-index:  13; 
            opacity: 0;
        }
        @keyframes popup{
            0%{
                transform: translateY(110vh) translateX(0);
                opacity: 0;
            }
            10%{
                opacity: 1; 
            }
            40%{
                opacity: 1; 
            }
            94%{
                opacity: 0; 
                
            }
            100%{
                transform: translateY(-10vh) translateX(var(--drift));
                opacity: 0;
            }
        }

        .particle:nth-of-type(1){left:15%; animation-delay: 0s; --drift:90px;}
        .particle:nth-of-type(3){left:30%; animation-delay: 3s; --drift:-120px;}
        .particle:nth-of-type(2){left:24%; animation-delay: 6s; --drift:80px;}
        .particle:nth-of-type(4){left:30%; animation-delay: 9s; --drift:-170px;}
        .particle:nth-of-type(5){left:40%; animation-delay: 4s; --drift:-60px;}  
        .particle:nth-of-type(6){left:50%; animation-delay: 5s; --drift:-60px;}  
        .particle:nth-of-type(7){left:70%; animation-delay: 9s; --drift:-170px;}
        .particle:nth-of-type(10){left:87%; animation-delay: 9s; --drift:70px;}
        .particle:nth-of-type(8){left:85%; animation-delay: 2s; --drift:-60px;}  
        .particle:nth-of-type(9){left:90%; animation-delay: 8s; --drift:-60px;}  
        


    </style>
</head>
<body>

    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>


      <div class="container-fluid text-center">
    <div class="row">
      <div class="col bg-primary d-flex justify-content-center align-items-center">
        <button class="btn btn-warning buttonALL btnProfile" onclick="openProfile()"><%=user.name %> Profile</button>
      </div>
      <div class="col" style="background: linear-gradient(180deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%); color:#4e5383  ;">
        <h1>HOME</h1>
      </div>
      <div class="col bg-danger d-flex justify-content-center align-items-center">
        <a href="/user/logout" class="btn btn-primary buttonALL btnLogout"> LOGOUT </a>
      </div>
    </div>
  </div>

    <div class="profile-sidebar" id="profileSidebar">
            <div class="profile-header p-2 d-flex justify-content-between text-align">
                <h3 class="profile-name"><%=user.name %></h3>
                <button class="close-profile" onclick="closeProfile()">Ã—</button>
                
            </div>
            <div class="profile-body"> 
                <div class="profile-section">
                    <div class="sidebar-score-card">
                        <div class="sidebar-score-icon">  &#127918; &#128123; </div>
                        <div class="sidebar-score-label">Your Score</div>
                        <div class="sidebar-score-value"><%=user.score  %></div>
                    </div>
                </div>
    
                <div class="profile-section">
                    <div class="section-title">Account Details</div>
                    
                    <div class="info-item">
                        <div class="info-label">  Name</div>
                        <div class="info-value"><%= user.name %></div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">  Email</div>
                        <div class="info-value"><%= user.email %></div>
                    </div>

                    <div class="info-item">
                        <div class="info-label"> User ID</div>
                        <div class="info-value"><%= user._id %></div>
                    </div>
                </div>
            </div>
      </div>


      <div class="profile-overlay" id="profile-overlay" onclick="closeProfile()"></div>

<div class="container text-center homeBox">
    <div class="card card-body cardBox"  >
        <div class="mb-3">
            <h1>Welcome <%=user.name %></h1>
        </div>
        <div class="m-5 p-5">
            <h3>score <%=user.score %></h3>
        </div>
    </div>

    <div class="m-4">
        <a href="/user/pacman/<%=user._id %>" class="btn btn-lg btn-secondary buttonALL btnPlay">Play Button</a>
    </div>

</div>

<script>
  function openProfile(){
            document.getElementById('profileSidebar').classList.add('active');
            document.getElementById('profileOverlay').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

  function closeProfile() {
      document.getElementById('profileSidebar').classList.remove('active');
      document.getElementById('profileOverlay').classList.remove('active');
      document.body.style.overflow = '';
  }

  // document.addEventListener('keydown', function(e) {
  //     if (e.key === 'Escape') closeProfile();
  // });
</script>
</body>
</html>

